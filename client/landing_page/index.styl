MainFont = Muli, sans-serif
BrandFont = Orbitron, serif

body
	background url(assets/BG.jpg)
	color #CCC
	height 100%
	font 46px MainFont
	
h1
	color #FFF
	font 18px BrandFont
	
h2
	color #DDD
	font-size 46px
	
p
	font-size 18px
	line-height 30px
	text-shadow 0px 0px 1px #DDD
	
span.brand-name
	font-family BrandFont
	
nav
	left 0px
	padding 0 30px
	position fixed
	top 0px
	
section
	text-align center
	
article
	margin 0 auto
	max-width 800px
	
form
	margin 50px auto
	
	input
		border-radius 10px
		max-height 50px
		margin 0 10px
		vertical-align top

	input[type="submit"]
		background-color #26c6da
		border-style hidden
		color #FFF
		font-size 14px
		padding 15px 24px
		transition 0.2s background-color
		
		&:hover
			background-color #0097a7

	input[type="email"]
		background-color transparent
		border-style double
		font-size 18px
		padding 12px 24px
